<div class="dashboard-header">
    <div class="project-info">
        <h1>{{proyecto.nombre}}</h1>
        <p>{{proyecto.descripcion}}</p>
    </div>
</div>

<div class="board-container">
    <h2>{{tablero.nombre}}</h2>
    
    <div class="kanban-board">
        {{#each tablero.listas}}
        <div class="kanban-list">
            <div class="list-header">
                <h3>{{this.nombre}}</h3>
                <span class="card-count">{{this.tarjetas.length}}</span>
            </div>
            
            <div class="cards-container">
                {{#each this.tarjetas}}
                <div class="card">
                    <div class="card-header">
                        <h4>{{this.titulo}}</h4>
                        <span class="card-label">{{this.etiqueta}}</span>
                    </div>
                    <p class="card-description">{{this.descripcion}}</p>
                </div>
                {{/each}}
            </div>
            
            {{#if @first}}
            <button class="btn-add-card" onclick="document.getElementById('modal-nueva-tarjeta').style.display='block'">
                + Añadir tarjeta
            </button>
            {{/if}}
        </div>
        {{/each}}
    </div>
</div>

<div id="modal-nueva-tarjeta" class="modal">
    <div class="modal-content">
        <span class="close" onclick="document.getElementById('modal-nueva-tarjeta').style.display='none'">&times;</span>
        
        <h2>Nueva Tarjeta</h2>
        
        <form action="/nueva-tarjeta" method="POST">
            <div class="form-group">
                <label for="titulo">Título de la tarjeta</label>
                <input type="text" id="titulo" name="titulo" placeholder="Ej: Implementar nueva funcionalidad" required>
            </div>
            
            <div class="form-group">
                <label for="descripcion">Descripción</label>
                <textarea id="descripcion" name="descripcion" rows="3" placeholder="Describe la tarea..." required></textarea>
            </div>
            
            <div class="form-group">
                <label for="etiqueta">Etiqueta</label>
                <select id="etiqueta" name="etiqueta" required>
                    <option value="Setup">Setup</option>
                    <option value="Diseño">Diseño</option>
                    <option value="Backend">Backend</option>
                    <option value="Frontend">Frontend</option>
                    <option value="Testing">Testing</option>
                </select>
            </div>
            
            <input type="hidden" name="listaId" value="lista-1">
            
            <div class="modal-buttons">
                <button type="button" class="btn btn-secondary" onclick="document.getElementById('modal-nueva-tarjeta').style.display='none'">
                    Cancelar
                </button>
                <button type="submit" class="btn btn-primary">
                    Crear Tarjeta
                </button>
            </div>
        </form>
    </div>
</div>